# Vexa AI Configuration Example
# Copy to .env and customize values

# Core API Configuration
ADMIN_API_TOKEN=change-me
API_GATEWAY_HOST_PORT=18056
ADMIN_API_HOST_PORT=18057
TRANSCRIPTION_COLLECTOR_HOST_PORT=18123

# Database Configuration
POSTGRES_HOST_PORT=15438
POSTGRES_DB=vexa_db
POSTGRES_USER=vexa_user
POSTGRES_PASSWORD=vexa_password

# Redis Configuration
REDIS_PORT=6379

# Traefik Configuration
TRAEFIK_WEB_HOST_PORT=18080
TRAEFIK_DASHBOARD_HOST_PORT=18085

# WhisperLive Configuration
WHISPER_LIVE_URL=ws://whisperlive-cpu:9090
DEVICE_TYPE=cpu
WHISPER_MODEL_SIZE=medium
LANGUAGE_DETECTION_SEGMENTS=10
VAD_FILTER_THRESHOLD=0.2

# Bot Configuration
BOT_IMAGE_NAME=vexa-bot:latest
DEFAULT_BOT_NAME=VexaAI-Transcriber
DEFAULT_LANGUAGE=en

# External Services
AI_SERVICE_ADAPTER_URL=http://ai-service-adapter:8000

# Optional registry overrides for docker-compose.hub.yml
DOCKER_HUB_ORG=vexaai
VERSION=latest

# Optional OAuth / Providers (fill if used)
TEAMS_CLIENT_ID=
TEAMS_CLIENT_SECRET=
TEAMS_TENANT_ID=
TEAMS_REDIRECT_URI=
GEMINI_API_KEY=
GEMINI_MODEL=gemini-1.5-flash
ENABLE_COST_OPTIMIZATION=false
MAX_GEMINI_TOKENS_PER_DAY=0
FALLBACK_TO_LOCAL=true

